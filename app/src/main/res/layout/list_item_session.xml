<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#363636">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/session_item_host"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="HOST:"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/session_item_ip"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_port"
            android:text="IP:"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/session_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_host_fld"
            android:text="TIME:"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/session_item_result"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_host_fld"
            android:text="RSLT:"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/session_item_host_fld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="dev-kidsense.kadho.cn"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/session_item_ip_fld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_port"
            android:text="IP:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/session_item_time_fld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_host_fld"
            android:text="00:00:00"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/session_item_result_fld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/session_item_host_fld"
            android:layout_below="@+id/session_item_host_fld"
            android:text="Waiting for result..."
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_blue_bright"/>
    </LinearLayout>

    <Space
        android:layout_width="100sp"
        android:layout_height="8sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"/>

</RelativeLayout>
